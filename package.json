{
  "name": "clue-hunt-ui",
  "version": "0.4.12",
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "workspaces": [
    "lib/components/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/lib/main.d.ts",
      "default": "./dist/main.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b ./tsconfig.lib.json && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prepublishOnly": "yarn build",
    "preversion": "yarn lint && yarn build",
    "version": "git add -A package.json yarn.lock",
    "postversion": "git push && git push --tags && yarn publish",
    "release": "standard-version",
    "release:first": "standard-version --first-release",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:beta": "standard-version --prerelease beta",
    "release:alpha": "standard-version --prerelease alpha",
    "release:interactive": "./scripts/release.sh",
    "publish:auto": "yarn release && npm publish --access public && git push --follow-tags origin $(git branch --show-current)"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "ajv": "^8.17.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "glob": "^11.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.4",
    "vite-plugin-dts": "^4.2.1",
    "vite-plugin-lib-inject-css": "^2.1.1"
  }
}
